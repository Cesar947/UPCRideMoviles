<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.publicar_viaje">


    <fragment
        android:id="@+id/publicacionMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="378dp"
        android:layout_height="334dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="449dp"
        android:layout_height="508dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/postear"
        tools:layout_editor_absoluteY="-14dp" />

    <Button
        android:id="@+id/btnPublicar"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="36dp"
        android:background="@drawable/buttonpost"
        android:text="@string/btnPublicar"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.094" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left2" />

    <EditText
        android:id="@+id/etHoraPartida"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="@string/etHoraPartida"
        android:inputType="time"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/etHoraLlegada"
        app:layout_constraintEnd_toStartOf="@+id/etPrecioBase"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etHoraLlegada"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="@string/etHoraLlegada"
        android:inputType="time"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintEnd_toStartOf="@+id/btnPublicar"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPrecioBase"
        android:layout_width="133dp"
        android:layout_height="44dp"
        android:layout_marginEnd="72dp"
        android:ems="10"
        android:hint="@string/etPrecioBase"
        android:inputType="textPersonName"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBaseline_toBaselineOf="@+id/etHoraPartida"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etPuntoDestino"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="@string/etPuntoDestino"
        android:inputType="textPersonName"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toTopOf="@+id/etHoraPartida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etPuntoPartida2"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="@string/etPuntoPartida"
        android:inputType="textPersonName"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        app:layout_constraintBottom_toTopOf="@+id/etPuntoDestino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etMensaje"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/etMensaje"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/etPuntoPartida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.886" />

</androidx.constraintlayout.widget.ConstraintLayout>